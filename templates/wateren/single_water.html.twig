{% extends 'base.html.twig' %}

{% block body %}
    <div class="grid-x grid-padding-y grid-padding-x">
        <div class="cell">
            <a class="button float-left mainGreenBackground " href="{{ path('app_wateren') }}">Terug</a>
        </div>
    </div>
    <div class="responsive-blog-post">
        <div class="individual-post">
            <h3>{{ water.name }} - {{ water.oppervlakte }} Hectare</h3>
            <p class="date">{{ water.land}}</p>
            <p class="date">Bereikbaarheid: {{ water.bereikbaarheid}}</p>
            <p class="date">Vangsten: {{ water.vangsten|length}}</p>
            <img src="{{asset('fotos/' ~ water.image)}}" alt={{ water.name}}>
            <h4 class="text-center">Info</h4>
            <div class="grid-x align-center">
                <div class="cell small-12 medium-6 large-3 text-center">
                    <p>Type Water: {{ water.type }}</p>
                </div>
                <div class="cell small-12 medium-6 large-3 text-center">
                    <p>Nachtvissen: {{ water.nachtvissen ? "Ja" : "Nee" }}</p>
                </div>
                <div class="cell small-12 medium-6 large-3 text-center">
                    <p>Voerboot {{ water.voerboot ? "Ja" : "Nee" }}</p>
                </div>
                <div class="cell small-12 medium-6 large-3 text-center">
                    <p>Boot {{ water.boot ? "Ja" : "Nee" }}</p>
                </div>
            </div>
            <div class="grid-y align-center grid-padding-y">
                <h4 class="text-center">Aantekeningen</h4>
                <div class="cell auto text-center">
                    <p>{{ water.aantekeningen }}</p>
                </div>
            </div>
        </div>
    </div>
{% endblock %}